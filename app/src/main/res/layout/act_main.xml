<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="act_main"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<com.android.lib.view.bottommenu.BottomMenuView
    android:background="@color/white"
    android:id="@+id/bottommenu"
    android:elevation="4dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="48dp"/>
        <include
            android:id="@+id/recordtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/item_record_title"/>



        <RelativeLayout
            android:text="contain_video"
            android:id="@+id/contain_chat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recordtitle"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:text="contain_image"
            android:id="@+id/contain_contact"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recordtitle"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:text="contain_text"
            android:id="@+id/contain_community"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recordtitle"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:text="contain_setting"
            android:id="@+id/contain_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recordtitle"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="match_parent"
            android:background="@drawable/actionbar_shadow_up"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
</layout>
