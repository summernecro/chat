<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item_record_title"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:elevation="4dp"
        android:background="@drawable/drwable_main_color"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="58dp">




    <TextView
        android:textSize="@dimen/dimen_text_size_stand"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_lab"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_add"
            android:src="@drawable/icon_chat_title_add"
            app:layout_constraintTop_toTopOf="@+id/tv_lab"
            app:layout_constraintBottom_toBottomOf="@+id/tv_lab"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />



    </android.support.constraint.ConstraintLayout>
</layout>
